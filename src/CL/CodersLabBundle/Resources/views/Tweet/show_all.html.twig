{% extends "::base.html.twig" %}

{% block title %}CLCodersLabBundle:Tweet:showAll{% endblock %}

{% block body %}

    <a href="/new">Dodaj Tweet</a>

    {% for tweet in tweets %}

        <pre>
            {{ tweet.name }}
            {{tweet.text}}
            <button class="btn btn-success" href="/update/{{tweet.id}}">Edytuj</button>
        </pre>
        <hr>

    {% endfor %}

{% endblock %}
